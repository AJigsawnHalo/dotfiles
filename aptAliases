# Package Management Aliases

## Debian-based Distros (Apt)
#alias upgd='sudo apt update && sudo apt upgrade'
#alias inst='sudo apt install'
#alias addrepo='sudo apt-add-repository'
#alias prge='sudo apt purge'
#alias remo='sudo apt remove'
#alias aremo='sudo apt autoremove'
#alias distup='sudo apt update && sudo apt upgrade && sudo apt dist-upgrade'
#alias acln='sudo apt autoclean'
#alias updt='sudo apt update && apt list --upgradable'

### Debian-based Distros (nala)
#alias upgd='sudo nala update && sudo nala upgrade'
alias upgd='sudo nala upgrade'
alias inst='sudo nala install'
alias addrepo='sudo nala-add-repository'
alias prge='sudo nala purge'
alias remo='sudo nala remove'
alias aremo='sudo nala autoremove'
alias distup='sudo nala update && sudo nala upgrade && sudo apt dist-upgrade'
alias acln='sudo nala clean'
alias aprg='sudo nala autopurge'
alias updt='sudo nala update && nala list --upgradable'
